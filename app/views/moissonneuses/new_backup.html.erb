<div class="container-fluid" style="background-image: linear-gradient(rgba(0,0,0,0.3),rgba(0,0,0,0.3)), url('https://images.unsplash.com/17/unsplash_527bf5fd7f5f6_1.JPG?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=751&q=80'); background-repeat: no-repeat; background-size: cover; background-position: bottom;">
  <div class="row pt-3">
    <div class="col-4 offset-4">
      <%= simple_form_for(@moissonneuse) do |f| %>
        <%= f.input :name, label: false, placeholder: "Nom", error: "Veuillez indiquer votre nom" %>
        <%= f.input :address, label: false, placeholder: 'Adresse', errror: "Veuillez renseigner votre code postal. ex: 69"  %>
        <%= f.input :brand, label: false, prompt: "Marque", collection: Moissonneuse::BRANDS %>
        <%= f.input :model, label: false, placeholder: 'Modèle', error: "Indiquez le modèle" %>
        <%= f.input :power, label: false, placeholder: 'Puissance (CV)', error: "Indiquez la puissance du véhicule ( CV )" %>
        <%= f.input :description, label: false, placeholder: 'Décrivez votre incroyable moissonneuse', error: "Veuillez renseigner minimum 50 caractères" %>
        <%= f.input :price, label: false, placeholder: 'Prix de la location (€/par jour)', error: "Veuillez renseigner un prix" %>
        <%= f.input :photo, as: :file %>
        <%= f.input :user, as: :hidden, input_html: {value: current_user.id } %>
          <div class="btn w-100">
            <%= f.submit "Enregistrer ma demande" %>
          </div>
      <% end %>
    </div>
  </div>
</div>
